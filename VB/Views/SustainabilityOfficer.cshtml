@model Sustain.ViewModels.DashboardVMs.SustainabilityOfficerDashboardViewModel
@{
    ViewData["Title"] = "Sustainability Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid p-4 p-md-5">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12 d-flex justify-content-between align-items-center">
            <h1 class="h3 fw-bold text-dark mb-0">Sustainability Dashboard</h1>
            <!-- Factory Selector Dropdown -->
            <form method="GET" asp-action="SustainabilityOfficerDashboard" class="d-inline-block">
                <div class="dropdown">
                    <button class="btn btn-primary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                        @(Model.SelectedFactoryId.HasValue? Model.Organization.Factories.FirstOrDefault(f => f.FactoryId == Model.SelectedFactoryId.Value)?.FactoryName : "All Factories")
                    </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="@Url.Action("SustainabilityOfficerDashboard")">All Factories</a></li>
                        @foreach (var factory in Model.Organization.Factories)
                        {
                            <li>
                                <button type="submit" name="selected_factory_id" value="@factory.FactoryId" class="dropdown-item @(Model.SelectedFactoryId == factory.FactoryId ? "active" : "")">
                                    @factory.FactoryName
                                </button>
                            </li>
                        }
                    </ul>
                </div>
            </form>
        </div>
    </div>

    <!-- Summary Cards Row -->
    <div class="row g-4 mb-4">
        <!-- Total Emissions Card -->
        <div class="col-lg-3 col-md-6">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body p-4">
                    <h6 class="card-title text-muted mb-2">Total Emissions</h6>
                    <h2 class="fw-bold text-dark mb-1">@Model.TotalEmissions.ToString("N3")</h2>
                    <p class="card-text text-muted mb-0">tons CO₂e</p>
                </div>
            </div>
        </div>
        <!-- Scope 1 Emissions Card -->
        <div class="col-lg-3 col-md-6">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body p-4">
                    <h6 class="card-title text-muted mb-2">Scope 1 Emissions</h6>
                    <h2 class="fw-bold text-dark mb-1">@Model.Scope1Emissions.ToString("N3")</h2>
                    <p class="card-text text-muted mb-0">tons CO₂e</p>
                </div>
            </div>
        </div>
        <!-- Scope 2 Emissions Card -->
        <div class="col-lg-3 col-md-6">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body p-4">
                    <h6 class="card-title text-muted mb-2">Scope 2 Emissions</h6>
                    <h2 class="fw-bold text-dark mb-1">@Model.Scope2Emissions.ToString("N3")</h2>
                    <p class="card-text text-muted mb-0">tons CO₂e</p>
                </div>
            </div>
        </div>
        <!-- Change vs Last Month Card -->
        <div class="col-lg-3 col-md-6">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body p-4">
                    <h6 class="card-title text-muted mb-2">Change vs. Last Month</h6>
                    @{
                        var currentMonth = DateTime.Now.Month;
                        var lastMonth = DateTime.Now.AddMonths(-1).Month;
                        var currentYear = DateTime.Now.Year;
                        var lastYear = DateTime.Now.AddMonths(-1).Year;

                        // Calculate emissions for current month
                        var currentMonthEmissions = Model.EmissionRecords
                        .Where(er => er.EmissionYear == currentYear && er.EmissionMonth == currentMonth)
                        .Sum(er => (double)(er.EmissionSource.EmissionSourceEmissionFactor * er.EmissionQuantity));

                        // Calculate emissions for last month
                        var lastMonthEmissions = Model.EmissionRecords
                        .Where(er => er.EmissionYear == lastYear && er.EmissionMonth == lastMonth)
                        .Sum(er => (double)(er.EmissionSource.EmissionSourceEmissionFactor * er.EmissionQuantity));

                        var changePercentage = 0.0;
                        if (lastMonthEmissions > 0)
                        {
                            changePercentage = ((currentMonthEmissions - lastMonthEmissions) / lastMonthEmissions) * 100;
                        }
                    }
                    <h2 class="fw-bold @(changePercentage < 0 ? "text-success" : "text-danger") mb-1">
                        @(changePercentage < 0 ? "▼" : "▲") @Math.Abs(changePercentage).ToString("N1")%
                    </h2>
                    <div class="d-flex gap-1">
                        @if (changePercentage < 0)
                        {
                            <i class="bi bi-arrow-down text-success"></i>
                        }
                        else
                        {
                            <i class="bi bi-arrow-up text-danger"></i>
                        }
                        <span class="text-muted">from last month</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Charts Row -->
    <div class="row g-4 mb-4">
        <!-- Emissions by Source (Donut Chart) -->
        <div class="col-lg-6">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-header bg-white py-3 border-bottom">
                    <h5 class="mb-0">Emissions by Source</h5>
                </div>
                <div class="card-body p-4">
                    <div id="emissionsBySourceChart" style="height: 200px;"></div>
                    <div class="mt-3 text-center">
                        <small class="text-muted">by month</small>
                    </div>
                </div>
            </div>
        </div>
        <!-- Emissions Trend (Line Chart) -->
        <div class="col-lg-6">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-header bg-white py-3 border-bottom">
                    <h5 class="mb-0">Emissions Trend</h5>
                </div>
                <div class="card-body p-4">
                    <div id="emissionsTrendChart" style="height: 200px;"></div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bottom Row: Factory Comparison & Data Entry Progress -->
    <div class="row g-4">
        <!-- Factory Comparison (Bar Chart) -->
        <div class="col-lg-8">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-header bg-white py-3 border-bottom">
                    <h5 class="mb-0">Factory Comparison</h5>
                </div>
                <div class="card-body p-4">
                    <div id="factoryComparisonChart" style="height: 200px;"></div>
                </div>
            </div>
        </div>
        <!-- Data Entry Progress -->
        <div class="col-lg-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-header bg-white py-3 border-bottom">
                    <h5 class="mb-0">Data Entry Progress</h5>
                </div>
                <div class="card-body p-4">
                    @{
                        // Group records by Year-Month and calculate total emissions for each period
                        var monthlyEmissions = Model.EmissionRecords
                        .GroupBy(er => $"{er.EmissionYear}-{er.EmissionMonth:D2}")
                        .ToDictionary(
                        g => g.Key,
                        g => g.Sum(er => (double)(er.EmissionSource.EmissionSourceEmissionFactor * er.EmissionQuantity))
                        );

                        // Find peak month data
                        var peakMonth = monthlyEmissions.OrderByDescending(x => x.Value).FirstOrDefault();
                        var lowestMonth = monthlyEmissions.OrderBy(x => x.Value).FirstOrDefault();

                        var totalFactories = Model.Organization.Factories.Count();
                        var factoriesWithRecords = Model.Organization.Factories
                        .Count(f => Model.EmissionRecords.Any(er => er.FactoryId == f.FactoryId));
                        var progressPercent = totalFactories > 0 ? (factoriesWithRecords / (double)totalFactories) * 100 : 0;
                    }

                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <span>Peak month:</span>
                        <span>
                            @if (peakMonth.Key != null)
                            {
                                var parts = peakMonth.Key.Split('-');
                                var year = int.Parse(parts[0]);
                                var month = int.Parse(parts[1]);
                                @($"{new DateTime(year, month, 1):MMMM yyyy} - {peakMonth.Value:N0} tCO₂")
                            }
                            else
                            {
                                @:N/A - 0 tCO₂
                            }
                        </span>
                    </div>

                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <span>Lowest month:</span>
                        <span>
                            @if (lowestMonth.Key != null)
                            {
                                var parts = lowestMonth.Key.Split('-');
                                var year = int.Parse(parts[0]);
                                var month = int.Parse(parts[1]);
                                @($"{new DateTime(year, month, 1):MMMM yyyy} - {lowestMonth.Value:N0} tCO₂")
                            }
                            else
                            {
                                @:N/A - 0 tCO₂
                            }
                        </span>
                    </div>

                    <div class="progress mb-3" style="height: 10px;">
                        <div class="progress-bar bg-success" role="progressbar" style="width: @progressPercent%;"
                             aria-valuenow="@progressPercent" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <span>Fuel Consumption</span>
                        <span class="badge bg-success">Approved</span>
                    </div>
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <span>Gas Consumption</span>
                        <span class="badge bg-success">Approved</span>
                    </div>
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <span>Diesel Consumption</span>
                        <span class="badge bg-warning text-dark">Pending</span>
                    </div>
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <span>Electricity</span>
                        <span class="badge bg-success">Approved</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            border: none;
            box-shadow: 0 0.125rem 0.5rem rgba(0, 0, 0, 0.1);
            border-radius: 0.75rem;
        }

        .card-header {
            background-color: #fff;
            border-bottom: 1px solid #e9ecef;
            border-top-left-radius: 0.75rem;
            border-top-right-radius: 0.75rem;
        }

        .card-body {
            padding: 1.5rem;
        }

        .card-title {
            font-weight: 600;
            color: #495057;
        }

        .card-text {
            font-size: 0.875rem;
            color: #6c757d;
        }

        .dropdown-menu {
            border: none;
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
            border-radius: 0.5rem;
        }

        .dropdown-item {
            padding: 0.5rem 1rem;
        }

            .dropdown-item:hover {
                background-color: #f8f9fa;
            }

        .btn-outline-secondary {
            border-color: #dee2e6;
            color: #495057;
        }

            .btn-outline-secondary:hover {
                background-color: #f8f9fa;
                border-color: #ced4da;
            }

        .progress {
            background-color: #e9ecef;
            border-radius: 0.25rem;
        }

        .progress-bar {
            border-radius: 0.25rem;
        }

        .badge {
            font-size: 0.75rem;
            font-weight: 500;
            padding: 0.35em 0.65em;
        }
    </style>
}

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Create Emissions by Source (Donut Chart)
            const emissionsBySourceChartOptions = {
                chart: {
                    type: 'donut',
                    height: 200,
                    toolbar: { show: false }
                },
                series: Object.values(@Json.Serialize(Model.ChartData["emissionsBySource"])),
                labels: Object.keys(@Json.Serialize(Model.ChartData["emissionsBySource"])),
                colors: ['#1a4d2e', '#28a745', '#ffc107', '#dc3545', '#6f42c1'],
                responsive: [{
                    breakpoint: 480,
                    options: {
                        chart: {
                            width: 200
                        },
                        legend: {
                            position: 'bottom'
                        }
                    }
                }]
            };

            const emissionsBySourceChart = new ApexCharts(document.querySelector("#emissionsBySourceChart"), emissionsBySourceChartOptions);
            emissionsBySourceChart.render();

            // Create Emissions Trend (Line Chart)
            const emissionsTrendChartOptions = {
                chart: {
                    type: 'line',
                    height: 200,
                    toolbar: { show: false }
                },
                series: [{
                    name: 'Emissions',
                    data: Object.values(@Json.Serialize(Model.ChartData["emissionsByMonth"]))
                }],
                xaxis: {
                    categories: Object.keys(@Json.Serialize(Model.ChartData["emissionsByMonth"])).map(month => {
                        const [year, monthNum] = month.split('-');
                        return `${new Date(year, monthNum - 1).toLocaleString('default', { month: 'short' })} ${year}`;
                    }),
                    title: {
                        text: 'Month'
                    }
                },
                yaxis: {
                    title: {
                        text: "Emissions (tCO₂e)"
                    }
                },
                colors: ['#477126']
            };

            const emissionsTrendChart = new ApexCharts(document.querySelector("#emissionsTrendChart"), emissionsTrendChartOptions);
            emissionsTrendChart.render();

            // Create Factory Comparison (Bar Chart)
            const factoryComparisonChartOptions = {
                chart: {
                    type: 'bar',
                    height: 200,
                    toolbar: { show: false }
                },
                series: [{
                    name: 'Emissions',
                    data: Object.values(@Json.Serialize(Model.ChartData["factoryEmissions"]))
                }],
                xaxis: {
                    categories: Object.keys(@Json.Serialize(Model.ChartData["factoryEmissions"])).map(factoryId => {
                        const factoryNames = @Json.Serialize(Model.ChartData["factoryNames"]);
                        return factoryNames[factoryId] || 'Unknown Factory';
                    }),
                    title: {
                        text: 'Factory'
                    }
                },
                yaxis: {
                    title: {
                        text: "Emissions (tCO₂e)"
                    }
                },
                colors: ['#477126']
            };

            const factoryComparisonChart = new ApexCharts(document.querySelector("#factoryComparisonChart"), factoryComparisonChartOptions);
            factoryComparisonChart.render();
        });
    </script>
}