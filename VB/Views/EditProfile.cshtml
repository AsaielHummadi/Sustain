@model Sustain.ViewModels.UserVMs.EditProfileViewModel
@{
    ViewData["Title"] = "Update Your Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid p-4 p-md-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header bg-white py-3">
                    <h4 class="mb-0 fw-bold">
                        <i class="bi bi-person-circle me-2"></i>Update Your Profile
                    </h4>
                </div>
                <div class="card-body p-4">
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="bi bi-check-circle-fill me-2"></i>@TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <form method="POST" asp-action="UpdateProfile">
                        @Html.AntiForgeryToken()

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label for="UserFname" class="form-label fw-semibold">First Name</label>
                                <input type="text" class="form-control @(ViewData.ModelState["UserFname"]?.Errors.Count > 0 ? "is-invalid" : "")"
                                       id="UserFname" name="UserFname" value="@Model.UserFname" required>
                                @if (ViewData.ModelState["UserFname"]?.Errors.Count > 0)
                                {
                                    <small class="text-danger">@ViewData.ModelState["UserFname"].Errors[0].ErrorMessage</small>
                                }
                            </div>
                            <div class="col-md-6">
                                <label for="UserLname" class="form-label fw-semibold">Last Name</label>
                                <input type="text" class="form-control @(ViewData.ModelState["UserLname"]?.Errors.Count > 0 ? "is-invalid" : "")"
                                       id="UserLname" name="UserLname" value="@Model.UserLname" required>
                                @if (ViewData.ModelState["UserLname"]?.Errors.Count > 0)
                                {
                                    <small class="text-danger">@ViewData.ModelState["UserLname"].Errors[0].ErrorMessage</small>
                                }
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="UserEmail" class="form-label fw-semibold">Email Address</label>
                            <input type="email" class="form-control @(ViewData.ModelState["UserEmail"]?.Errors.Count > 0 ? "is-invalid" : "")"
                                   id="UserEmail" name="UserEmail" value="@Model.UserEmail" required>
                            @if (ViewData.ModelState["UserEmail"]?.Errors.Count > 0)
                            {
                                <small class="text-danger">@ViewData.ModelState["UserEmail"].Errors[0].ErrorMessage</small>
                            }
                        </div>

                        <div class="mb-3">
                            <label for="UserPhone" class="form-label fw-semibold">Phone Number</label>
                            <input type="text" class="form-control" id="UserPhone" name="UserPhone"
                                   value="@Model.UserPhone" placeholder="+966 5X XXX XXXX">
                        </div>

                        <div class="mb-4">
                            <label for="UserPassword" class="form-label fw-semibold">
                                New Password <small class="text-muted">(leave blank to keep current)</small>
                            </label>
                            <input type="password" class="form-control @(ViewData.ModelState["UserPassword"]?.Errors.Count > 0 ? "is-invalid" : "")"
                                   id="UserPassword" name="UserPassword" autocomplete="new-password">
                            @if (ViewData.ModelState["UserPassword"]?.Errors.Count > 0)
                            {
                                <small class="text-danger">@ViewData.ModelState["UserPassword"].Errors[0].ErrorMessage</small>
                            }
                        </div>

                        <div class="mb-3">
                            <label for="UserPasswordConfirmation" class="form-label fw-semibold">Confirm New Password</label>
                            <input type="password" class="form-control" id="UserPasswordConfirmation"
                                   name="UserPasswordConfirmation" autocomplete="new-password">
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-dark-green px-4">
                                <i class="bi bi-check-circle me-1"></i> Save Changes
                            </button>
                            <a href="javascript:history.back()" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-1"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>