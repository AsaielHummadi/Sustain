@model Sustain.Models.SubscriptionPlan
@{
    ViewData["Title"] = "Subscription Successful";
    Layout = "~/Views/Shared/_AppLayout.cshtml";
}

<div class="container py-5 my-5">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <div class="card border-0 shadow-lg rounded-3">
                <div class="card-body py-5">
                    <i class="bi bi-check-circle-fill text-success display-1 mb-4"></i>
                    <h1 class="fw-bold text-dark mb-3">Subscription Successful!</h1>
                    <p class="lead text-muted mb-4">
                        Thank you for subscribing to our
                        @if (Model != null)
                        {
                            @Model.SubscriptionPlanName
                        }
                        else
                        {
                            @:selected
                        }
                        plan.
                        Your organization has been successfully created and you can now access all features.
                    </p>
                    <a href="@Url.Action("AdminDashboard", "Dashboard")" class="btn btn-dark-green px-5 py-3 rounded-3 fw-bold">
                        Go to Dashboard
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>