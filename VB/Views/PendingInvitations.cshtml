@model Sustain.ViewModels.UserVMs.PendingInvitationsViewModel
@{
    ViewData["Title"] = "Pending Invitations";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid p-4 p-md-5">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="h3 fw-bold text-dark mb-2">Pending Invitations</h1>
                    <p class="text-muted">Manage sent invitations and track their status</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Success/Error Messages -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Stats Cards -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6">
            <div class="stats-card stats-card-primary">
                <div class="stats-icon">
                    <i class="bi bi-clock-history"></i>
                </div>
                <div class="stats-content">
                    <h3 class="stats-value">@Model.PendingInvitations.Count</h3>
                    <p class="stats-label">Pending Invitations</p>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="stats-card stats-card-warning">
                <div class="stats-icon">
                    <i class="bi bi-exclamation-triangle"></i>
                </div>
                <div class="stats-content">
                    @{
                        var expiringSoon = Model.PendingInvitations.Count(i =>
                        i.InvitationExpiration.HasValue &&
                        (i.InvitationExpiration.Value - DateTime.Now).TotalDays <= 2);
                    }
                    <h3 class="stats-value">@expiringSoon</h3>
                    <p class="stats-label">Expiring Soon</p>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="stats-card stats-card-info">
                <div class="stats-icon">
                    <i class="bi bi-person-gear"></i>
                </div>
                <div class="stats-content">
                    @{
                        var sustainabilityOfficers = Model.PendingInvitations.Count(i => i.RoleId == Sustain.Utilities.Constants.Roles.SUSTAINABILITY_OFFICER);
                    }
                    <h3 class="stats-value">@sustainabilityOfficers</h3>
                    <p class="stats-label">Sustainability Officers</p>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="stats-card stats-card-success">
                <div class="stats-icon">
                    <i class="bi bi-building-gear"></i>
                </div>
                <div class="stats-content">
                    @{
                        var factoryOperators = Model.PendingInvitations.Count(i => i.RoleId == Sustain.Utilities.Constants.Roles.FACTORY_OPERATOR);
                    }
                    <h3 class="stats-value">@factoryOperators</h3>
                    <p class="stats-label">Factory Operators</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Invitations Table -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">All Pending Invitations</h5>
                    <div class="d-flex align-items-center gap-2">
                        <span class="badge bg-warning text-dark">Expires in 7 days</span>
                    </div>
                </div>
                <div class="card-body p-4">
                    @if (Model.PendingInvitations.Count > 0)
                    {
                        <div class="table-responsive">
                            <table id="datatable" class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th width="300">Invited User</th>
                                        <th width="150">Role</th>
                                        <th width="120">Factory</th>
                                        <th width="120">Sent</th>
                                        <th width="120">Expires</th>
                                        <th width="100">Status</th>
                                        <th width="120" class="text-center">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var invitation in Model.PendingInvitations)
                                    {
                                        var isExpiringSoon = invitation.InvitationExpiration.HasValue &&
                                        (invitation.InvitationExpiration.Value - DateTime.Now).TotalDays <= 2;
                                        var isExpired = invitation.InvitationExpiration.HasValue &&
                                        invitation.InvitationExpiration.Value < DateTime.Now;

                                        <tr class="@(isExpiringSoon ? "table-warning" : "") @(isExpired ? "table-danger" : "")">
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="avatar-circle-sm bg-secondary text-white me-3">
                                                        <i class="bi bi-person"></i>
                                                    </div>
                                                    <div>
                                                        <strong class="d-block text-dark">@invitation.InvitedEmail</strong>
                                                        <small class="text-muted">Invitation sent</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <span class="badge @GetRoleBadgeClass(invitation.RoleId)">
                                                    @GetRoleName(invitation.RoleId)
                                                </span>
                                            </td>
                                            <td>
                                                @if (invitation.Factory != null)
                                                {
                                                    <span class="badge bg-light text-dark">
                                                        <i class="bi bi-building me-1"></i>
                                                        @invitation.Factory.FactoryCode
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>
                                                <div class="d-flex flex-column">
                                                    <small class="text-muted">@invitation.InvitationSentAt?.ToString("MMM dd, yyyy")</small>
                                                    <small class="text-muted">@GetTimeAgo(invitation.InvitationSentAt)</small>
                                                </div>
                                            </td>
                                            <td>
                                                <div class="d-flex flex-column">
                                                    <small class="@(isExpiringSoon ? "text-warning fw-bold" : "text-muted") @(isExpired ? "text-danger fw-bold" : "")">
                                                        @invitation.InvitationExpiration?.ToString("MMM dd, yyyy")
                                                    </small>
                                                    <small class="text-muted">
                                                        @GetTimeUntil(invitation.InvitationExpiration)
                                                    </small>
                                                </div>
                                            </td>
                                            <td>
                                                @if (isExpired)
                                                {
                                                    <span class="badge bg-danger">Expired</span>
                                                }
                                                else if (isExpiringSoon)
                                                {
                                                    <span class="badge bg-warning text-dark">Expiring Soon</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-primary">Active</span>
                                                }
                                            </td>
                                            <td>
                                                <div class="d-flex justify-content-center gap-1">
                                                    @if (!isExpired)
                                                    {
                                                        <form method="POST" asp-action="CancelInvitation" asp-route-id="@invitation.InvitationId" class="d-inline">
                                                            @Html.AntiForgeryToken()
                                                            <button type="submit" class="btn btn-sm btn-outline-danger"
                                                                    onclick="return confirm('Cancel invitation to @invitation.InvitedEmail?')"
                                                                    title="Cancel Invitation"
                                                                    data-bs-toggle="tooltip">
                                                                <i class="bi bi-x-circle"></i>
                                                            </button>
                                                        </form>
                                                    }
                                                    else
                                                    {
                                                        <button class="btn btn-sm btn-outline-secondary" disabled title="Expired Invitation">
                                                            <i class="bi bi-clock"></i>
                                                        </button>
                                                    }

                                                    <form method="POST" asp-action="ResendInvitation" asp-route-id="@invitation.InvitationId" class="d-inline">
                                                        @Html.AntiForgeryToken()
                                                        <button type="submit" class="btn btn-sm btn-outline-dark-green"
                                                                onclick="return confirm('Resend invitation to @invitation.InvitedEmail?')"
                                                                title="Resend Invitation"
                                                                data-bs-toggle="tooltip">
                                                            <i class="bi bi-arrow-repeat"></i>
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <div class="empty-state-icon mb-3">
                                <i class="bi bi-envelope-check display-1 text-muted"></i>
                            </div>
                            <h4 class="text-muted">No Pending Invitations</h4>
                            <p class="text-muted mb-4">All invitations have been accepted or expired.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

